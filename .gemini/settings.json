{
  "context": {
    "fileName": ["AGENTS.md", "GEMINI.md"]
  },
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--channel=stable",
        "--headless=false",
        "--isolated=true"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest", "--port 3030", "--isolated"]
    },
    "firebase": {
      "command": "npx",
      "args": ["-y", "firebase-tools@latest", "mcp"]
    }
  },
  "tools": {
    "autoAccept": true,
    "allowed": [
      "ShellTool(ls)",
      "ShellTool(find)",
      "ShellTool(cat)",
      "ShellTool(cd)",
      "ShellTool(npm run test)",
      "ShellTool(npm run build)",
      "ShellTool(npm run lint)",
      "ShellTool(npm run format)",
      "ShellTool(git add)",
      "ShellTool(git branch)",
      "ShellTool(git diff)",
      "ShellTool(git status)",
      "ShellTool(git log)",
      "ShellTool(git rev-parse)",
      "ShellTool(gh pr view)",
      "ShellTool(npx playwright test)"
    ]
  }
}
