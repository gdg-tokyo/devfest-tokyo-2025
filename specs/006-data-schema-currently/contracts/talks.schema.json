{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Talk",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "abstract": {
        "type": "string"
      },
      "speaker_ids": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "tech_tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "level": {
        "type": "string",
        "enum": ["Beginner", "Intermediate", "Advanced"]
      },
      "perspective": {
        "type": "string",
        "enum": ["Introduction", "Experience", "Challenge"]
      },
      "is_keynote": {
        "type": "boolean"
      }
    },
    "required": ["id", "title", "abstract", "speaker_ids"]
  }
}
